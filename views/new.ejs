<% include partials/header %>
<!--container puts it in the center-->
<div class="container">
    <div class="row">
        <h1>new picture</h1>
        <form  action="/pictures" method="POST"  encType="multipart/form-data">

            <!--classes are bootstrap stuff-->
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name" required>
            </div>
            <!--<div class="form-group">-->
                <!--<input class="form-control" type="text" name="image" placeholder="image url">-->
            <!--</div>-->
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description" required>
            </div>
            <div class="form-group">
                <input align="center" type="file" name="upload" placeholder="upload image" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>

        </form>

        <a href="/pictures">Go Back</a>
    </div>
</div>


